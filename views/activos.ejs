<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">  
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Asamblea</title>
    <%- include('partials/head') %>
    <style>
        th {
            border: 1px solid rgb(247, 244, 244);
            padding: 8px;
            text-align: left;
        }
        .successImage {
            display: none; /* Ocultar inicialmente */
            width: 50px; /* Ajusta el tamaño según necesites */
            margin-top: 10px; /* Espacio superior */
        }
    </style>
</head>

<body>
    <%- include('partials/navigation') %>  
    <h5 style="font-size: 14px; color: rgb(204, 126, 10); text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); transition: color 0.3s ease;" 
        onmouseover="this.style.color='darkblue';" 
        onmouseout="this.style.color='blue';">
        <span style="padding-left: 10px;"><%= name %></span>
    </h5>
    <br>
    <div class="content">
        <div class="register-formAncho">
            <div class="container mt-1">
                <table class="table table-bordered table-hover">
                    <thead>
                        <th>
                            <h4>ACTIVOS</h4>
                            <a href="/grpcc " class="btn btn-success btn-sm btnind-hover-effect">Regresar</a>
                        </th>
                    </thead>        
                </table>
            </div>

            <div class="container mt-1">
                <table class="table table-bordered table-hover">
                    <thead></thead>
                    <tbody>
                        <% if (data && data.length > 0) { %>
                            <% data.forEach(function(item) { %>
                                <tr>
                                    <td class="tex-hover-effect"><%= item.id_activo %></td>
                                    <td>
                                        <a href="/inventarios?id=<%= item.id %>&texto=<%= item.texto %>" class="btn btn-primary btn-sm btn-hover-effect">Detalle</a>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %> 
                            <tr>
                                <td colspan="5">No hay datos disponibles</td>   
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    
    <script>
        function checkValue(input) {
            console.log('imagen'); // Este mensaje debería aparecer
            const successImage = input.parentElement.querySelector('.successImage');
            if (parseInt(input.value) === 0) {
                successImage.style.display = 'block'; // Mostrar imagen
            } else {
                successImage.style.display = 'none'; // Ocultar imagen
            }
        }
    </script>
</body>
</html>
