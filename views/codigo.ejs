<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Escaneo de código de barras</title>
    <script type="module">
        document.addEventListener('DOMContentLoaded', () => {
            // Referencia a los campos del formulario
            const barcodeField = document.getElementById('barcode');
            const nameField = document.getElementById('name');
            const priceField = document.getElementById('price');

            // Evento para capturar el código de barras
            barcodeField.addEventListener('input', () => {
                // Asegúrate de que el código de barras esté completo antes de mover el enfoque
                if (barcodeField.value.length > 0) {
                    console.log('Código de barras escaneado:', barcodeField.value);

                    // Mover el foco al siguiente campo (campo "name")
                    nameField.focus();
                }
            });

            // Opcionalmente, puedes añadir eventos para los demás campos
            nameField.addEventListener('input', () => {
                if (nameField.value.length > 0) {
                    console.log('Nombre ingresado:', nameField.value);
                    priceField.focus();  // Mover foco al campo de precio
                }
            });
        });
    </script>
</head>
<body>

<form>
    <label for="barcode">Código de barras:</label>
    <input type="text" id="barcode" placeholder="Escanea el código de barras" autofocus><br><br>

    <label for="name">Nombre del producto:</label>
    <input type="text" id="name" placeholder="Ingrese el nombre del producto"><br><br>

    <label for="price">Precio:</label>
    <input type="text" id="price" placeholder="Ingrese el precio del producto"><br><br>
</form>

</body>
</html>
